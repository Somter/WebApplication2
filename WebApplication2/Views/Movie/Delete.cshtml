@model WebApplication2.Models.Movie

@{
    ViewData["Title"] = "Удалить фильм";
}

<div class="container-delete mt-4 d-flex flex-column align-items-center">
    <div class="card film-card">
        <div class="row g-0">
            <div class="col-auto poster-frame">
                <img src="@Model.Poster" alt="@Model.Name Poster">
            </div>
            <div class="col">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name (@Model.Year)</h5>
                    <p><strong>Режиссер:</strong> @Model.Director</p>
                    <p><strong>Жанр:</strong> @Model.Genre</p>
                    <p><strong>Описание:</strong> @Model.Description</p>
                </div>
            </div>
        </div>
    </div>
    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a class="btn btn-secondary" asp-action="Index">Отмена</a>
        </div>
    </form>
</div>